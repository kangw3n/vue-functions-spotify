a
    color #2ebd59

.artist-header
    padding-bottom 20px
    margin-bottom 20px
    border-bottom solid 1px #333

.artist-thumb
    width 80px
    height 80px
    object-fit cover
    margin-right 10px

.flexy
    display flex
    flex-flow row wrap

.main
    border-bottom 1px solid #333
    padding 30px 0

.album
    text-align center
    background #333
    padding 10px 20px
    border 1px solid #666

.album-thumb
    width 100%

.artist-albums .well
    margin-bottom 20px
    overflow auto
    min-height 400px
    display flex
    align-items center

.spacer
    display inline-block
    margin 0 5px